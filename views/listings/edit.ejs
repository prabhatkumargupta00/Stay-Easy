<% layout("layouts/boilerplate.ejs") -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h2>Edit your listing</h2>
<form action="/listings/<%= listing._id %>?_method=PUT" method="POST">

  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" value="<%= listing.title %>" name="listing[title]" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]" cols="50" rows="3" class="form-control"><%= listing.description %></textarea>
  </div>
  <div class="mb-3">
    <label for="image" class="form-label">Image link</label>
    <input type="text" value="<%= listing.image %>" name="listing[image]" class="form-control"/>
  </div>

  <div class="row">
    <div class="mb-3 col-md-5">
    <label for="price" class="form-label">Price</label>
    <input type="text" value="<%= listing.price %>" name="listing[price]" class="form-control"/>
  </div>
  <div class="mb-3 col-md-7">
    <label for="country" class="form-label">Country</label>
    <input type="text" value="<%= listing.country %>" name="listing[country]" class="form-control"/>
  </div>
  </div>

  
  <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" value="<%= listing.location %>" name="listing[location]" class="form-control"/>
  </div>
  <button class="btn edit-btn btn-dark mt-2 mb-4">Save changes</button>

  <!-- </html> -->
</form>

  </div>
</div>

